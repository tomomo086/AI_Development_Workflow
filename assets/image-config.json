    "supportedFormats": ["png", "jpg", "jpeg", "svg", "pdf"],
    "compressionEnabled": true
  },
  "folders": {
    "screenshots": {
      "description": "アプリケーションのスクリーンショット",
      "namingPattern": "YYYY-MM-DD_機能名_説明",
      "allowedFormats": ["png", "jpg", "jpeg"]
    },
    "setup-images": {
      "description": "環境構築・セットアップ手順の画像",
      "namingPattern": "setup_手順番号_説明",
      "allowedFormats": ["png", "jpg", "jpeg"]
    },
    "workflow-diagrams": {
      "description": "ワークフロー図・フローチャート",
      "namingPattern": "workflow_機能名_説明",
      "allowedFormats": ["png", "svg", "pdf"]
    }
  },
  "documentation": {
    "markdownTemplate": "![説明文](assets/{folder}/{filename})",
    "relativePathExample": "../assets/screenshots/"
  }
